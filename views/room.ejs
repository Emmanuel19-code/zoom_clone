<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VIDEO CALL</title>
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/7b96a86a00.js" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="https://unpkg.com/peerjs@1.3.2/dist/peerjs.min.js"></script>
     <script>
         const ROOM_ID="<%=roomId%>";
     </script>
</head>
<body>
     <div class="main">
         <div class="main_left">
      <div class="main_videos">
                    <div id="video_grid">
                    
                    </div>
      </div>
            <!--for controls-->
                 <div class="main_controls">
                     <div class="main_controls_block">
                         <div onclick="muteUnmute()"class="main_controls_button">
                            <i class="fa-solid fa-microphone"></i>
                             <span>Mute</span>
                         </div>
                        <div class="main_controls_button">
                            <i class="fa-solid fa-video"></i>
                            <span>stop video</span>
                        </div>
                        <!--second-->
                        <div class="main_controls_block">
                            <div class="main_controls_button">
                          <i class="fa-solid fa-shield-halved"></i>
                             <span>Security</span>
                               </div>
                               <div class="main_controls_button">
                                  <i class="fa-solid fa-user-group"></i>
                                       <span>Partcipants</span>
                                      </div>
                                  <div class="main_controls_button">
                                <i class="fa-solid fa-message"></i>
                                    <span>Chat</span>
                                         </div>
                                </div>
                        </div>
                        <!--third-->
                        <div class="main_controls_block">
                            <div class="main_controls_button">
                                <span class="leave_meeting">Leave Meeting</span>
                            </div>
                        </div>
                 </div>
         </div>
         <!--right-->
         <div class="main_right">
                  <div class="main_header">
                      <h4>chat</h4>
                      <div class="main_chat_window">
                          <ul class="message">

                          </ul>
                      </div>
                      <div class="main_message_container">
                          <input id="chat_message" type="text" placeholder="Type message here...">
                      </div>
                  </div>
         </div>
     </div>
</body>
<script src="script.js"></script>
<!--we place the script.js after the body because the 
    document has to load before the js so it wii be 
    able to append
-->
</html>